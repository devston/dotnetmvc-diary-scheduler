@model DiaryScheduler.Presentation.Web.Models.Scheduler.CalendarEventViewModel

@Html.AntiForgeryToken()

<div class="mb-3">
    @Html.LabelFor(x => x.Title, new { @class = "form-label" })
    @Html.TextBoxFor(x => x.Title, htmlAttributes: new { @class = "form-control", maxlength = "100" })
    @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
</div>

<div class="row">
    <div class="col-12 col-md-6">
        <div class="mb-3">
            <label class="form-label" for="DateStarting">@Html.DisplayNameFor(x => x.DateFrom)</label>
            <input class="form-control" id="DateStarting" type="text" name="DateStarting" readonly />
            @Html.EditorFor(x => x.DateFrom, new { htmlAttributes = new { @type = "hidden" } })
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="mb-3">
            <label class="form-label" for="DateEnding">@Html.DisplayNameFor(x => x.DateTo)</label>
            <input class="form-control" id="DateEnding" type="text" name="DateEnding" readonly />
            @Html.EditorFor(x => x.DateTo, new { htmlAttributes = new { @type = "hidden" } })
        </div>
    </div>
</div>