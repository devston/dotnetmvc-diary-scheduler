@model DiaryScheduler.Web.Models.CalendarEventViewModel

@{
    ViewBag.Title = "Create event";
}

<div class="container" page-require="scheduler" page-module-name="Scheduler" page-module-variable="create">
    <div class="card">
        <form class="card-body" id="create-cal-entry-form">
            <h2 class="card-title">Create calendar event</h2>
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CalendarEntryId)
            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, htmlAttributes: new { @class = "form-control", maxlength = "100" })
                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description, htmlAttributes: new { @class = "form-control no-resize", maxlength = "200", rows = "3" })
                @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
            </div>
            <div class="form-row">
                <div class="col-md-6 form-group">
                    @Html.LabelFor(x => x.DateFrom)
                    @Html.TextBoxFor(x => x.DateFrom, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.DateFrom, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6 form-group">
                    @Html.LabelFor(x => x.DateTo)
                    @Html.TextBoxFor(x => x.DateTo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.DateTo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-check">
                @Html.CheckBoxFor(x => x.AllDay, htmlAttributes: new { @class = "form-check-input" })
                @Html.LabelFor(x => x.AllDay, htmlAttributes: new { @class = "form-check-label" })
            </div>
            <div class="form-group">
                <button class="btn btn-success" id="save-entry-btn" title="Create a new calendar event" type="submit">Create</button>
                <button class="btn btn-outline-secondary" id="back-to-cal-btn" title="Go back to the calendar" type="button">Back</button>
            </div>
        </form>
    </div>
</div>